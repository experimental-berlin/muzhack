.modal.fade#edit-plan-modal(tabindex="-1", role="dialog", aria-labelledby="modal-label"
    aria-hidden="true")
  .modal-dialog
    .modal-content
      .modal-header
        a#close-modal(href='#' data-dismiss='modal', aria-hidden='true') &times;
        h4#modal-label.modal-title Edit Trello Board
      .modal-body
        form.pure-form.pure-form-stacked
          fieldset
            input#edit-board-name.modal-default.modal-input(type="text", placeholder="Name", name="name", value=name)
            input#edit-board-description.modal-input(type="text", placeholder="Description", name="desc", value=description)
            input#edit-board-organization.modal-input(type="text", placeholder="Organization", name="org", value=organization)
      .modal-footer
        button.pure-button.pure-button-primary(type="button", data-modal="ok") OK
        button.pure-button(type="button", data-modal="cancel") Cancel
